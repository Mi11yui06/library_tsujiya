<% @document_title = "貸出台帳詳細" %>
<div class="pb-2 border-bottom mb-3 d-flex justify-content-between align-items-start">
    <h1 class="h3">貸出詳細画面</h1>
    <%= button_to '削除する', loan_path(@loan), method: :delete, onclick: "return confirm('本当に削除しますか？')" , class: "btn btn-sm btn-outline-danger"%>
</div>
<table class="table table-bordered border-dark">
    <tr>
        <th class="table-light" style="width: 20%">会員ID</th>
        <td><%= @loan.member_id %></td>
    </tr>
    <tr>
        <th class="table-light">会員名</th>
        <td><%= link_to @loan.member.name, member_path(@loan.member)  %></td>
    </tr>
    <tr>
        <th class="table-light">資料ID</th>
        <td><%= @loan.stock_id %></td>
    </tr>
    <tr>
        <th class="table-light">資料名</th>
        <td>
            <%= @loan.stock.catalog.title %>
            <% if @loan.stock.new_book? %>
                <span style="color: red;">※新刊</span>
            <% end %>
        </td>
    </tr>
    <tr>
        <th class="table-light">貸出年月日</th>
        <td><%= @loan.loan_date %></td>
    </tr>
    <tr>
        <th class="table-light">返却期日</th>
        <td><%= @loan.due_date %></td>
    </tr>
    <tr>
        <th class="table-light">返却年月日</th>
        <td><%= @loan.return_date %></td>
    </tr>
    <tr>
        <th class="table-light">備考</th>
        <td><%= @loan.remarks %></td>
    </tr>
</table>
<p><%= link_to '編集する', edit_loan_path, method: :get, class: "btn btn-sm btn-outline-secondary"%></p>
<p><%= link_to '一覧に戻る', loans_path %></p>